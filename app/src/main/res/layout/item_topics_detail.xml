<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="artcleDetails"
            type="com.zly.diycode.main.ArticleDetails" />
    </data>

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <TextView
            android:id="@+id/tv_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{artcleDetails.username}"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_nodes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:text="@{artcleDetails.node}"
            app:layout_constraintBaseline_toBaselineOf="@+id/tv_user"
            app:layout_constraintLeft_toRightOf="@+id/tv_user" />

        <TextView
            android:id="@+id/tv_pulish_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{artcleDetails.publishDate}"
            app:layout_constraintBaseline_toBaselineOf="@+id/tv_nodes"
            app:layout_constraintRight_toRightOf="parent" />

        <WebView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginTop="22dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_user" />
    </android.support.constraint.ConstraintLayout>
</layout>
